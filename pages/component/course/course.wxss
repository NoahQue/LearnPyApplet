/* pages/component/course/course.js.wxss */
.c-container{
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 688rpx;
    height: 1140rpx;
    line-height: 30rpx;
    border-radius: 40rpx;
    background-color: rgba(32, 31, 47, 100);
    color: rgba(16, 16, 16, 100);
    font-size: 28rpx;
    text-align: center;
    font-family: Arial;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.top-box{
    display: flex;
    justify-content: center;
}
.course-box{
    height: 100rpx;
    display: flex;
    justify-content: left;
    margin-right: 120rpx;
    
}
.index-circle{
    margin-top: 30rpx;
    width: 68rpx;
    height: 68rpx;
    line-height: 40rpx;
    border-radius: 28rpx;
    background-color: rgba(158, 158, 167, 100);
    text-align: center;
    border: 2rpx solid rgba(187, 187, 187, 100);
    font-family: PMZDQingSong-regular;
    font-size: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    justify-items: center;
}
.course-text{
    margin-top: 50rpx;
    margin-left: 40rpx;
    width: 280rpx;
    height: 28rpx;
    color: rgba(244, 242, 242, 100);
    font-size: 28rpx;
    text-align: left;
    font-family: SFUIText-bold;  
}
.star-circle{
    margin-left: 10rpx;
    margin-top: 48rpx;
    width: 52rpx;
    height: 54rpx;
    border-radius: 56rpx;
    display: flex;
}
.course-line{
    width: 570rpx;
    border: 1rpx solid rgba(187, 187, 187, 100);
    margin-top: 20rpx;
    margin-left: 60rpx;
}
.scroll-list {
    width: 688rpx;
    height: 1140rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    
}

.page-section {
    flex: 1;
    overflow: hidden;
}