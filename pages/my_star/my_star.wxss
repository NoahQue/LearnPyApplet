/* pages/my_star/my_star.wxss */
.my_star_container{
    margin-left: 34rpx;
    margin-top: 20rpx;
    width: 688rpx;
    height: 1040rpx;
    line-height: 40rpx;
    border-radius: 40rpx;
    background-color: rgba(32, 31, 47, 100);
    color: rgba(16, 16, 16, 100);
    font-size: 28rpx;
    text-align: center;
    font-family: Arial;
}
.star_type{
    width: 688rpx;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.type_btn{
    margin-top: 34rpx;
    width: 248rpx;
    height: 90rpx;
    border-radius: 24rpx;
    border: 2rpx solid rgba(244, 139, 74, 100);
    line-height: 90rpx;
    background: url('https://learnpystaticpng.obs.cn-north-1.myhuaweicloud.com/images/me/box3.png');
}
.btn_text{
    color: rgba(165, 95, 92, 100);
    font-size: 44rpx;
    text-align: center;
    font-family: 'PingFangSC-semiBold';
    font-weight: 900;
}
.title_item_box{
    height: 80%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}
.title_item_box_1{
    height: 40%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    text-align: center;
}
.star_icon{
    margin-left: 26rpx;
    width: 68rpx;
    height: 68rpx;
    border-radius: 28rpx;
    background-image: url('https://learnpystaticpng.obs.cn-north-1.myhuaweicloud.com/images/project/collection_luminous.png');
    background-position: center;
    background-size: 100%;
}
.title{
    margin-left: 30rpx;
    margin-right: 5rpx;
    width: 70%;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    
}
.item_name{
    color: #5DA8FF;
    font-size: 24rpx;
}
.python{
    color: #FFFFFF;
    font-size: 24rpx;
}
.item_content{
    width: 588rpx;
    height: 80rpx;
    color: rgba(178, 178, 178, 100);
    font-size: 28rpx;
    text-align: left;
    font-family: 'PingFangSC-regular';
}
.fengexian{
    margin-top: 10rpx;
    width: 648rpx;
    height: NaNpx;
    border: 1rpx solid rgba(187, 187, 187, 100);
}