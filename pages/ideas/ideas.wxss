/* pages/ideas/ideas.wxss */
.ideas_background{
    margin: 5%;
    width: 90%;
    height: 1100rpx;
    line-height: 40rpx;
    border-radius: 40rpx;
    background-color: rgba(32, 31, 47, 100);
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}
.ideas_title{
    margin-top: 20rpx;
    color: rgba(255, 255, 255, 100);
    font-size: 36rpx;
    text-align: center;
    font-family: 'PingFangSC-medium';
    font-weight: 900;
}
.ideas_container{
    height: 90%;
    width: 90%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    margin-top: 20rpx;
    line-height: 40rpx;
    border-radius: 24rpx;
    background-color: rgba(74, 74, 98, 100);
    justify-content: center;
    align-items: center;
}
.page-section {
    flex: 1;
    overflow: hidden;
    
}
.ideas_item{
    margin-top: 30rpx;
    width: 90%;
    margin-left: 5%;
    margin-right: 5%;
    height: 140rpx;
    line-height: 40rpx;
    border-radius: 24rpx;
    background-color: rgba(202, 203, 210, 100);
    text-align: center;
    border: 1rpx solid rgba(187, 187, 187, 100);
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.user_image{
    margin-left: 10rpx;
    height: 90%;
    margin-top: 5%;
    margin-bottom: 5%;
    width: 140rpx;
    background: url('https://learnpystaticpng.obs.cn-north-1.myhuaweicloud.com/images/homepage/learn_py.png') no-repeat;
    background-size: 100%;
}
.user_name{
    margin-left: 10%;
    height: 100%;
    color: rgba(99, 92, 92, 100);
    font-size: 32rpx;
    text-align: left;
    font-family: 'PingFangSC-regular';
    line-height: 144rpx;
}
.fengexian{
    width: 340rpx;
    height: NaNpx;
    border: 2rpx solid rgba(227, 227, 227, 100);
}
.ideas_item_describe{
    margin-bottom: 20rpx;
    width: 366rpx;
    height: 40rpx;
    color: rgba(135, 128, 128, 100);
    font-size: 28rpx;
    text-align: left;
    font-family: 'PingFangSC-regular';
}