/* pages/ideas/ideas.wxss */
.ideas_title{
    margin-left: 40%;
    margin-top: 10rpx;
    width: 144rpx;
    height: 52rpx;
    color: rgba(255, 255, 255, 100);
    font-size: 36rpx;
    text-align: left;
    font-family: 'PingFangSC-medium';
    font-weight: 900;
}
.ideas_container{
    margin-left: 8%;
    margin-top: 20rpx;
    width: 630rpx;
    height: 1000rpx;
    line-height: 40rpx;
    border-radius: 24rpx;
    background-color: rgba(74, 74, 98, 100);
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}
.ideas_item{
    margin-top: 80rpx;
    width: 540rpx;
    height: 140rpx;
    line-height: 40rpx;
    border-radius: 24rpx;
    background-color: rgba(202, 203, 210, 100);
    text-align: center;
    border: 1rpx solid rgba(187, 187, 187, 100);
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.ideas_item_image{
    margin-left: 10rpx;
    width: 144rpx;
    height: 144rpx;
    border-radius: 50%;
    background: url('https://learnpystaticpng.obs.cn-north-1.myhuaweicloud.com/images/homepage/learn_py.png') no-repeat;
    background-size: 100%;
}
.ideas_item_user{
    width: 344rpx;
    height: 144rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
}
.user_name{
    margin-top: 20rpx;
    width: 344rpx;
    height: 60rpx;
    color: rgba(99, 92, 92, 100);
    font-size: 32rpx;
    text-align: left;
    font-family: 'PingFangSC-regular';
    line-height: 70rpx;
}
.fengexian{
    width: 340rpx;
    height: NaNpx;
    border: 2rpx solid rgba(227, 227, 227, 100);
}
.ideas_item_describe{
    margin-bottom: 20rpx;
    width: 366rpx;
    height: 40rpx;
    color: rgba(135, 128, 128, 100);
    font-size: 28rpx;
    text-align: left;
    font-family: 'PingFangSC-regular';
}