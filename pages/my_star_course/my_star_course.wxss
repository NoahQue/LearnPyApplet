/* pages/my_star_course/my_star_course.wxss */
.my_star_container{
    margin-left: 34rpx;
    margin-top: 20rpx;
    width: 688rpx;
    height: 1100rpx;
    line-height: 40rpx;
    border-radius: 40rpx;
    background-color: rgba(32, 31, 47, 100);
    color: rgba(16, 16, 16, 100);
    font-size: 28rpx;
    text-align: center;
    font-family: Arial;
}
.star_type{
    width: 688rpx;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.type_btn{
    margin-top: 34rpx;
    width: 248rpx;
    height: 90rpx;
    border-radius: 24rpx;
    /* border: 2rpx solid rgba(244, 139, 74, 100); */
    line-height: 90rpx;
    /* background: url('https://learnpystaticpng.obs.cn-north-1.myhuaweicloud.com/images/me/box3.png'); */
}
.btn_text{
    color: rgba(165, 95, 92, 100);
    font-size: 44rpx;
    text-align: center;
    font-family: 'PingFangSC-semiBold';
    font-weight: 900;
}
.title_item_box{
    height: 80%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    text-align: center;
    box-sizing: border-box;
}
.page-section {
    flex: 1;
    overflow: hidden;
}
.item{
    margin-top: 20rpx;
    height: 80rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.star_icon{
    margin-left: 46rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 28rpx;
    background-image: url('https://learnpystaticpng.obs.cn-north-1.myhuaweicloud.com/images/project/collection_luminous.png');
    background-position: center;
    background-size: 100%;
}
.item_title_name{
    margin-left: 30rpx;
    top: 24px;
    width: 80%;
    height: 60rpx;
    color: rgba(244, 242, 242, 100);
    font-size: 32rpx;
    text-align: left;
    font-family: 'SFUIText-bold';
    font-weight: 900;
    line-height: 60rpx;
}
.fengexian{
    margin-top: 10rpx;
    margin-left: 8rpx;
    width: 640rpx;
    height: NaNpx;
    border: 1rpx solid rgba(187, 187, 187, 100);
}
