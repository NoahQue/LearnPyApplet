/* pages/component/exercise/exercise.js.wxss */
.exercise_container{
    margin-left: 32rpx;
    width: 688rpx;
    height: 1000rpx;
    line-height: 40rpx;
    border-radius: 40rpx;
    background-color: rgba(32, 31, 47, 100);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.page-section {
    flex: 1;
    overflow: hidden;
    
}
.level{
    /* left: 0px; */
    margin-top: 26rpx;
    margin-left: 26rpx;
    width: 166rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 16rpx;
    background-color: rgba(39, 193, 143, 100);
    color: rgba(255, 255, 255, 100);
    font-size: 28rpx;
    text-align: center;
    font-family: Arial;
    font-weight: 700;
}
.exercise_list{
    margin-top: 2rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap:wrap;
}
.exercise_item{
    margin: 40rpx;
    width: 112rpx;
    height: 112rpx;
    line-height: 112rpx;
    border-radius: 28rpx;
    background-color: rgba(74, 74, 98, 100);
    text-align: center;
    border: 5rpx solid rgba(107, 230, 255, 100);
    color: rgba(255, 255, 255, 100);
    font-size: 40rpx;
    font-family: 'PMZDQingSong-regular';
    font-weight: 900;
}
.exercise_item.solved{
    margin: 40rpx;
    width: 112rpx;
    height: 112rpx;
    line-height: 112rpx;
    border-radius: 28rpx;
    background-color: rgba(255, 154, 0, 100);
    text-align: center;
    /* border: 5rpx solid rgba(107, 230, 255, 100); */
    color: rgba(255, 255, 255, 100);
    font-size: 40rpx;
    font-family: 'PMZDQingSong-regular';
    font-weight: 900;
}